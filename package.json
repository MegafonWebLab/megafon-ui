{
    "name": "@megafon/megafon-ui",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "lerna run build",
        "clean": "lerna clean --yes",
        "typecheck": "lerna run typecheck",
        "lint": "lerna run lint",
        "prettier": "lerna run prettier:check",
        "test": "lerna run test",
        "test:update": "lerna run test:update",
        "coverage": "lerna run coverage",
        "pre-commit": "lerna run typecheck && lerna run lint && lerna run test",
        "release": "lerna version && yarn install --frozen-lockfile",
        "demo": "docz dev",
        "demo:build": "docz build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn run pre-commit",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "resolutions": {
        "@types/react": "16.9.23",
        "@types/react-dom": "16.9.5"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@megafon/frontend-presets": "^3.4.2",
        "@svgr/webpack": "^5.5.0",
        "@typescript-eslint/eslint-plugin": "^4.21.0",
        "@typescript-eslint/parser": "^4.22.0",
        "commitizen": "^4.2.1",
        "copy-text-to-clipboard": "^2.2.0",
        "cz-conventional-changelog": "^3.2.1",
        "docz": "2.2.0",
        "eslint": "^7.24.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-prettier": "^8.2.0",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.23.2",
        "eslint-plugin-react-hooks": "^4.2.0",
        "gatsby-plugin-less": "^3.1.1",
        "husky": "^1.3.1",
        "lerna": "^3.22.1",
        "lint-staged": "^11.1.2",
        "prettier": "^2.2.1",
        "prism-react-renderer": "^1.1.1",
        "react-frame-component": "^4.1.3",
        "react-live": "^2.2.2",
        "react-tabs": "^3.1.1",
        "stylelint": "^13.12.0",
        "stylelint-order": "^4.1.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
