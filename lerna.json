{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "createRelease": "github"
    },
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): release",
      "ignoreChanges": [
        "*.md",
        "*.mdx",
        "*.txt",
        "*.test.*",
        "*.docz.*",
        "ui-core/src/colors/**"
      ],
      "preDistTag": "beta"
    }
  }
}
