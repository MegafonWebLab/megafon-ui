{
  "name": "@megafon/ui-helpers",
  "version": "2.0.0-beta.0",
  "main": "dist/lib/index.js",
  "module": "dist/es/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MegafonWebLab/megafon-ui.git"
  },
  "author": "MegaFon",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "coverage": "yarn coverage:unit",
    "coverage:unit": "jest --ci --collectCoverage --coverageDirectory=coverage",
    "typecheck": "tsc --noEmit -p .",
    "prettier:check": "prettier --list-different \"src/**/*.{js,jsx,ts,tsx}\"",
    "prettier:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "yarn lint:ts",
    "lint:ts": "eslint --ext .js,.jsx,.ts,.tsx src --max-warnings=0",
    "test": "yarn test:unit",
    "test:unit": "jest",
    "test:update": "jest --updateSnapshot"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "src/**/**/*.(js|jsx|ts|tsx)": [
      "eslint --max-warnings=0 --config ../../.eslintrc.json"
    ]
  },
  "peerDependencies": {
    "react": ">=16.13.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.8.4",
    "classnames": "^2.2.6",
    "core-js": "^3.6.4",
    "htmr": "^0.9.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.1.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "jest": "^25.1.0",
    "react": "^16.13.0",
    "rollup": "^2.51.1",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^3.0.2",
    "typescript": "^4.3.4"
  }
}
