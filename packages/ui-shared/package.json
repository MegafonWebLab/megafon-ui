{
  "name": "@megafon/ui-shared",
  "version": "2.0.0-beta.28",
  "files": [
    "dist"
  ],
  "main": "dist/lib/index.js",
  "module": "dist/es/index.js",
  "typings": "dist/lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MegafonWebLab/megafon-ui.git"
  },
  "sideEffects": [
    "*.css"
  ],
  "author": "MegaFon",
  "license": "MIT",
  "scripts": {
    "build": "gulp build",
    "coverage": "yarn coverage:unit",
    "coverage:unit": "jest --ci --collectCoverage --coverageDirectory=coverage",
    "typecheck": "tsc --noEmit -p .",
    "lint": "yarn lint:ts && yarn lint:less",
    "lint:less": "stylelint --syntax less src/**/*.less src/**/**/*.less",
    "lint:ts": "tslint -c tslint.json '{src,scripts}/**/*.ts?(x)'",
    "test": "yarn test:unit",
    "test:unit": "jest",
    "test:update": "jest --updateSnapshot"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "babelConfig": {
          "presets": [
            "@babel/preset-env",
            "@babel/react"
          ]
        }
      }
    },
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/scripts/styleMock.ts",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/scripts/fileMock.ts"
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/utils/modernizr.ts"
    ],
    "coverageDirectory": "coverage",
    "testURL": "http://localhost/",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "\\.tsx?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/",
      "/src/utils/modernizr.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/scripts/setupEnzyme.ts"
    ]
  },
  "peerDependencies": {
    "react": ">=16.4.1",
    "react-dom": ">=16.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-block-scoping": "^7.8.3",
    "@babel/plugin-transform-object-assign": "^7.8.3",
    "@babel/plugin-transform-react-constant-elements": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-react": "^7.8.3",
    "@types/classnames": "^2.2.9",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.1.3",
    "@types/jsdom": "^11.12.0",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/webpack-env": "^1.15.1",
    "babel-plugin-module-resolver": "^3.2.0",
    "del": "^3.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "glob": "^7.1.6",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0-beta.2",
    "gulp-less": "^4.0.1",
    "gulp-svgmin": "^2.2.0",
    "gulp-typescript": "^5.0.1",
    "husky": "^1.3.1",
    "jest": "^25.1.0",
    "jsdom": "^11.12.0",
    "less-plugin-autoprefix": "^2.0.0",
    "merge2": "^1.3.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "stylelint": "^9.10.1",
    "through2": "^2.0.5",
    "ts-jest": "^25.2.1",
    "tslint": "^5.20.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.8.3",
    "webpack-filter-warnings-plugin": "^1.2.1"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/runtime": "^7.8.4",
    "@megafon/ui-core": "^2.0.0-beta.27",
    "classnames": "^2.2.6",
    "core-js": "^3.6.4",
    "deep-equal": "^1.1.1",
    "htmr": "^0.8.8",
    "lodash.throttle": "^4.1.1",
    "prop-types": "^15.7.2",
    "react-input-mask": "^2.0.4",
    "react-popper": "0.10.4",
    "react-slick": "^0.23.2"
  }
}
