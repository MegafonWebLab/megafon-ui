{
  "compilerOptions": {
    "baseUrl": "./src",
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
  },
  "include": ["typings/**/*", "src/**/*.ts", "src/**/*"],
  "exclude": ["node_modules"]
}
