{
  "name": "@megafon/ui-core",
  "version": "4.6.0",
  "files": [
    "dist",
    "styles"
  ],
  "main": "dist/lib/index.js",
  "module": "dist/es/index.js",
  "typings": "dist/lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MegafonWebLab/megafon-ui.git"
  },
  "sideEffects": [
    "*.css",
    "*.less"
  ],
  "author": "MegaFon",
  "license": "MIT",
  "scripts": {
    "build": "gulp build",
    "cleanDist": "rm -rf dist styles",
    "coverage": "yarn coverage:unit",
    "coverage:unit": "jest --ci --collectCoverage --coverageDirectory=coverage",
    "typecheck": "tsc --noEmit -p .",
    "prettier:check": "prettier --list-different \"src/**/*.{js,jsx,ts,tsx}\"",
    "prettier:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "yarn lint:ts && yarn lint:less",
    "lint:ts": "eslint --ext .js,.jsx,.ts,.tsx src --max-warnings=0",
    "lint:less": "stylelint --syntax less src/**/*.less src/**/**/*.less",
    "lint:less:fix": "yarn lint:less --fix",
    "test": "yarn test:unit",
    "test:unit": "jest",
    "test:update": "jest --updateSnapshot"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "src/**/**/*.(js|jsx|ts|tsx)": [
      "eslint --max-warnings=0 --config ../../.eslintrc.json"
    ]
  },
  "peerDependencies": {
    "@megafon/ui-icons": "^2.0.0",
    "react": ">=16.13.0",
    "react-dom": ">=16.13.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/plugin-transform-object-assign": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@megafon/ui-icons": "^2.3.0",
    "@svgr/core": "^2.4.1",
    "@testing-library/jest-dom": "5.16.2",
    "@testing-library/react": "12.1.2",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "13.5.0",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.9.1",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "babel-plugin-module-resolver": "^3.2.0",
    "del": "^3.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "glob": "^7.1.6",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0-beta.2",
    "gulp-less": "^4.0.1",
    "gulp-typescript": "^5.0.1",
    "jest": "^25.1.0",
    "less-plugin-autoprefix": "^2.0.0",
    "merge2": "^1.3.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "stylelint": "^9.10.1",
    "through2": "^2.0.5",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.8.4",
    "@datepicker-react/hooks": "^2.7.0",
    "@megafon/ui-helpers": "^2.3.0",
    "@popperjs/core": "^2.5.3",
    "core-js": "^3.6.4",
    "date-fns": "^2.16.1",
    "lodash.debounce": "^4.0.8",
    "lodash.throttle": "^4.1.1",
    "prop-types": "^15.7.2",
    "react-input-mask": "^2.0.4",
    "react-popper": "^2.2.3",
    "swiper": "^6.5.6"
  }
}
