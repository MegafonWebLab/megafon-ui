{
  "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
  },
  "extends": "./node_modules/@megafon/frontend-presets/eslint",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType":  "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "settings": {
    "import/resolver": {
      "node": {
          "paths": ["src"],
          "extensions": [".ts", ".tsx"]
      },
      "eslint-import-resolver-typescript": true
    }
  },
  "rules": {
    "import/no-extraneous-dependencies": "off"
  }
}
